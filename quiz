<script>
  function count() {
    var score=0;
    for (var i=1;i<=6;i++){
        if (document.getElementById(i).checked){
          if (document.getElementById(i).value==1){
            score++;
          }
        }

    }

    document.getElementById("svar").innerHTML = score+" Rätt";
  }
</script>
